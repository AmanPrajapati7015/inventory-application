<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Games</title>
    <link rel="stylesheet" href="/styles/games.css">
</head>
<body>
    <h1>Game list</h1> 
    <div class="games">
        <% locals.games.forEach(game => {%>
            <a href="/games/game-page/<%= game.id %>">
                <div class="game" style="background-image: url('<%= game.cover_img_url%>');">
                    <div class="black-tint">
                        <h2><%= game.name %></h2>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>
</body>
</html>